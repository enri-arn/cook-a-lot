        <Label fx:id="yearLabel"
               alignment="TOP_CENTER"
               contentDisplay="CENTER"
               layoutX="50.0"
               layoutY="26.0"
               maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308"
               minHeight="-Infinity"
               minWidth="-Infinity"
               prefHeight="25.0"
               prefWidth="950.0"
               text="Gennaio 2018"
               textAlignment="CENTER"
               wrapText="true"
